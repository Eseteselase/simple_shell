#include"shell.h"

/**
 * execute_fun - execve file
 * @input: take the command
 */

void execute_fun(char *input)
{
	pid_t child_process_id = fork();

	if (child_process_id == -1)
	{
		perror("fork");
		exit(1);
	}
	if (child_process_id == 0)
	{
		char *token;
		char **cmd = NULL;
		int i = 0;

		token = strtok(input, " ");
		while (token != NULL)
		{
			cmd = realloc(cmd, (i + 2) * sizeof(char *));
			if (cmd == NULL)
			{
				perror("realloc");
				exit(1);
			}
			cmd[i] = strdup(token);
			if (cmd[i] == NULL)
			{
				perror("strdup");
				exit(1);
			}
			i++;
			token = strtok(NULL, " ");
		}
		cmd[i] = NULL;
		if(execve(cmd[0], cmd, NULL) == -1)
		{
			int j = 0;
			perror("execve");
			while (j < i)
			{
				free(cmd[j]);
				j++;
			}
			free(cmd);
			exit(1);
		}
	}
	else
		wait(NULL);
}
